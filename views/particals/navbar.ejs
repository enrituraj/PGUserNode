<header class="header">
    <nav class="navbar">
        <div class="left_menu">
            <a href="/" class="logo">
                <div class="icon">
                <i class="bx bxl-postgresql logo-icon"></i>
                </div>
                PgNodeUser</a>
            
            <ul class="main_menu" id="main_menu">
                
                <% if (user!= null) { %>
                        <li>
                            <a href="/profile" class="menu_link">My Profile</a>
                        </li>
                        <li>
                            <a href="/login_history" class="menu_link">Login History</a>
                        </li>
                        <li>
                            <a href="/all_user" class="menu_link">All User</a>
                        </li>                        
                <% } else{ %>
                    <li>
                        <a href="/login" class="menu_link lg-hidden">Login</a>
                    </li>
                    <li>
                        <a href="/signup" class="menu_link lg-hidden">Sign up</a>
                    </li>
                <% } %>
            </ul>
        </div>
        <div class="right_menu">
            <div class="icons">
                <div class="icon" id="theme_icon">
                    <i class="bx bx-sun hide"></i>
                    <i class="bx bx-moon"></i>
                </div>
                <div class="menu_toogler icon lg-hidden" id="menu_icon">
                    <i class="bx bx-menu"></i>
                </div>
            </div>
            
            <% if (user!= null) { %>
                <div class="dropdown" data-dropdown="">
                    <a class="dropdown_btn user__data" data-dropdown-button="">
                        <img src="./img/avatar.png" alt="user profile image">
                        <div class="user__content sm-hidden">
                            <p><%= typeof user.full_name != 'undefined' ? user.full_name : 'N/A' %></p>
                            <p><%= typeof user.email != 'undefined' ? user.email : 'N/A' %></p>
                          
                        </div>
                    </a>
                    <div class="dropdown-menu">
                        <a href="#" class="user__data dropdown_box">
                            <img src="./img/avatar.png" alt="user profile image">
                        <div class="user__content">
                            <p><%= typeof user.full_name != 'undefined' ? user.full_name : 'N/A' %></p>
                            <p><%= typeof user.email != 'undefined' ? user.email : 'N/A' %></p>
                          
                        </div>
                        </a>
                      <a href="" class="dropdown_item">Cahange profile</a>
                      <a href="" class="dropdown_item">Cahnge Password</a>
                      <a href="/logout" class="dropdown_item logout">Logout</a>
                    </div>
                  </div>
            <% } else{ %>
                <a href="/login" class="btn btn-light sm-hidden">Login</a>
                <a href="/signup" class="btn btn-dark sm-hidden">Signup</a>
            <% } %>
        </div>
    </nav>
</header>