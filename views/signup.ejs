<div class="form_body">
    <div class="form_box">
        <h1>Signup</h1>
        <% if(error != ''){ %>
            <div class="alert error">
              <%= error %>
            </div>
        <% } %>
         
        <form action="/signup" method="post">
        <div class="form_group">
            <label for="Fullname">Fullname</label>
            <input type="text" name="full_name" id="fullname" placeholder="Enter Full Name">
        </div>
        <div class="form_group">
            <label for="Email">Email</label>
            <input type="Email" name="email" id="Email" placeholder="Enter Email Address">
        </div>
        <div class="form_group">
            <label for="dob">DOB</label>
            <input type="date" name="dob" id="dob" placeholder="Enter Date Of Birth">
        </div>
        <div class="form_group">
            <label for="Password">Password</label>
            <input type="Password" name="password" id="Password" placeholder="Enter Current Password">
        </div>
        <div class="form_group">
            <button type="submit" class="btn btn-dark">Signup</button>
        </div>
    </form>
    </div>
</div>